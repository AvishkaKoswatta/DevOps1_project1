pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_VERSION = '2.27.1'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git repository
                git 'https://github.com/AvishkaKoswatta/DevOps1_project1.git'
            }
        }
        
        stage('Build and Deploy') {
            steps {
                // Build and deploy using Docker Compose
                script {
                    sh """
                        docker-compose --version || curl -L "https://github.com/docker/compose/releases/download/${DOCKER_COMPOSE_VERSION}/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && chmod +x /usr/local/bin/docker-compose
                        docker-compose up -d
                    """
                }
            }
        }
    }
    
    post {
        always {
            // Clean up Docker containers and networks
            script {
                sh '''
                    docker-compose down
                    docker volume rm devops1_project1_mysql-data
                '''
            }
        }
    }
}
